<%= form_tag students_path, method: :get do %>
    <%= label_tag(:q, "Search for:")%>
    <%= search_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil%>
<% end %>

<% if @students.empty? %>
    Sorry, there are no matches for <%= params[:query] %>
<% else %>
    <% @students.each do |st| %>
        <%= render partial: 'student', locals: {student: st}%>
    <% end %>
<% end %>